<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Express & EJS</title>
    <script src="http://code.jquery.com/jquery-2.2.4.min.js"></script>
    <script>
      $(() => {
        $('#btn').click(() => {
          $.ajax({
            type: 'POST',
            url: '/ajax',
            dataType: 'json',
            success: (data) => {
              $('#msg').html(data.msg);
            },
            error: () => {},
          });
        });
      });
    </script>
  </head>
  <body>
    <form>
      <div id="msg"></div>
      <button id="btn" type="button">Send</button>
    </form>
  </body>
</html>
